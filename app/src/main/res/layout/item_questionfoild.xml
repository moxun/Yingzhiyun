<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_110"
   android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_clinic_avatar"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_75"

            android:src="@mipmap/tiku"
            android:scaleType="fitCenter"
            />

    <TextView
        android:layout_marginTop="@dimen/dp_6"
        android:id="@+id/recy_video_title"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_12"
        android:lines="1"
        android:maxEms="12"
        android:ellipsize="end"
        android:layout_marginStart="3dp"
        android:text="全国各地2018-2019试题..."
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_clinic_avatar"
        android:layout_alignStart="@+id/iv_clinic_avatar" />

    <TextView
        android:id="@+id/recy_video_duan"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_video_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="@dimen/dp_1"
        android:text="@string/classfiy"
        android:textColor="#ffcccccc"
        android:textSize="@dimen/sp_10" />


</RelativeLayout>

