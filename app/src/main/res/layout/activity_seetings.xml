<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#F1F1F1"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/finish"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/leftdetail" />

        <TextView
            android:id="@+id/tool_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="设置"
            android:textColor="#ff000000"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp_16" />


    </RelativeLayout>

    <View
        android:id="@+id/fen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_below="@+id/tool_relative"
        android:alpha="0.5"
        android:background="#cccccc" />


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rea_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/fen"

        >

        <TextView
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="#ff000000"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/item_jiantou"
            android:layout_width="@dimen/sp_14"
            android:layout_height="@dimen/sp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@mipmap/righttou" />

        <View
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:layout_alignParentBottom="true"
            android:background="#C8C7CC" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rea_banben"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/rea_image"
        >

        <TextView
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前版本"
            android:textColor="#ff000000"
            android:textSize="14sp" />


        <TextView

            android:id="@+id/versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="当前版本"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:layout_marginEnd="@dimen/dp_15"
            />

        <View
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:layout_alignParentBottom="true"
            android:background="#C8C7CC" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rea_huancun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:layout_below="@+id/rea_banben"
      >

        <TextView
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清理缓存"
            android:textColor="#ff000000"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="当前版本"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            />

        <View

            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:layout_alignParentBottom="true"
            android:background="#C8C7CC"  />
    </RelativeLayout>


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/rea_huancun"

        >

        <TextView
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="#ff000000"
            android:textSize="14sp" />


        <ImageView

            android:layout_width="@dimen/sp_14"
            android:layout_height="@dimen/sp_14"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@mipmap/righttou" />

        <View
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:layout_alignParentBottom="true"
            android:background="#C8C7CC" />
    </RelativeLayout>
    <TextView
        android:id="@+id/logout"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_below="@+id/about_us"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:text="退出该账号"
        android:textColor="#ff1091e9"
        android:textSize="14sp"
        />
</RelativeLayout>