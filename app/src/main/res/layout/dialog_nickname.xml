<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_245"
    android:layout_height="@dimen/dp_171"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/graytuo"
    android:orientation="vertical">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:text="请输入您的昵称"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textCursorDrawable="@drawable/edittext_guangbiao"
        android:padding="@dimen/dp_5"
        android:background="@drawable/edittext_radio"
        android:layout_below="@id/title"
        android:id="@+id/content"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"

        android:textColor="#ff666666"
        android:textSize="12sp"
        />

    <RelativeLayout
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_below="@+id/content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_left_btn"
            android:text="取消"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:background="@drawable/edittext_radio"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_30" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/dialog_right_btn"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/shape_blue_shape8"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_30"
            />
    </RelativeLayout>
</RelativeLayout>
