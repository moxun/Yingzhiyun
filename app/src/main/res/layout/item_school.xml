<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/dp_17"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_school_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="北京市101中学2017-2018学年高一上学期期中考试"
        android:textColor="#ff000000"
        android:textSize="@dimen/sp_14"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/item_school_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_school_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-10-11"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_10"
            />

        <ImageView
            android:src="@mipmap/word"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_school_size"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:text="45kb"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_10"
            />



    </LinearLayout>
    <View
        android:id="@+id/fen"
        android:background="#C8C7CC"
        android:layout_below="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        />
</RelativeLayout>

