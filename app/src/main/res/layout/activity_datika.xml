<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/public_title_bar"/>
    <View

        android:id="@+id/fen"
        android:alpha="0.5"
        android:background="#cccccc"
        android:layout_below="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_60">


        <ImageView

            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/icon_datika"
            />
        <TextView

            android:layout_marginStart="@dimen/dp_11"
            android:layout_gravity="center_vertical"

            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:text="答题卡"
            android:textColor="#ff000000"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_marginStart="@dimen/dp_200"
            android:id="@+id/datika"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/righttou"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_60">


        <ImageView

            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/icon_answer"
            />
        <TextView

            android:layout_marginStart="@dimen/dp_11"
            android:layout_gravity="center_vertical"

            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:text="答案解析"
            android:textColor="#ff000000"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_marginStart="@dimen/dp_200"
            android:id="@+id/answer"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/righttou"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16" />
    </LinearLayout>
</LinearLayout>