<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@mipmap/icon_recyback">


    <TextView
        android:id="@+id/paper_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_20"
        android:text="第"
        android:textColor="#ff666666"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/paper_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/paper_text1"
        android:text="8"
        android:textColor="#1091E9"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/paper_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/paper_text2"
        android:text="小题"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_16" />
    <TextView
        android:layout_toStartOf="@+id/score_text"
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/dp_16"
        android:textColor="#DB253B"
        android:layout_marginEnd="@dimen/dp_5"
        android:text="6"
        android:textSize="@dimen/sp_24" />
    <TextView

        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_75"
        android:text="分"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@mipmap/righttou" />
</RelativeLayout>