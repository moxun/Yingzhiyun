<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@mipmap/icon_recyback">

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="@dimen/dp_370"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <TextView

            android:id="@+id/subject_type"
            android:textColor="#E25162"
            android:gravity="center"
            android:text="语"

            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18" />

        <TextView
            android:id="@+id/course_title"
            android:layout_marginStart="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_toEndOf="@+id/subject_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高考语文一轮复习"
            android:textColor="#ff000000"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/course_time"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_below="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10月6日-11月17日  16：00-18：00"
            android:textColor="#ff666666"
            android:textSize="10sp"
            />

        <ImageView

            android:id="@+id/course_teacherhead"
            android:src="@drawable/icon_tou"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_below="@+id/course_time"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26" />
        <TextView

            android:id="@+id/teacher_name"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/sp_15"
            android:layout_below="@+id/course_time"
            android:layout_toEndOf="@+id/course_teacherhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是老师名字"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_10"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/hint"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_below="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开课失败退费中，费用将全额原路退回"
            android:textColor="#ffde2910"
            android:textSize="10sp"
            />
    </RelativeLayout>
</RelativeLayout>