<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/mine_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="#ff000000"
        android:textSize="@dimen/sp_14"
        />
    <TextView

        android:id="@+id/all_rank"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/mine_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/58"
        android:layout_alignBottom="@+id/mine_rank"
        android:textColor="#ffcccccc"
        android:textSize="@dimen/sp_11"
        />

    <TextView
        android:id="@+id/rank_type"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_below="@+id/all_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="班级排名"
        android:textColor="#ff666666"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/zhixian"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_toEndOf="@+id/rank_type"
        android:src="@mipmap/icon_zhixian"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_30" />
</RelativeLayout>
