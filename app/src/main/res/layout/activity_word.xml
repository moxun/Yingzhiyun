<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_file_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/tool_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <ImageView
                android:id="@+id/finish"
                android:src="@mipmap/leftdetail"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_15" />

            <TextView
                android:id="@+id/tool_title"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#ff000000"
                android:textSize="@dimen/sp_16"
                />

            <ImageView
                android:id="@+id/favouter"
                android:layout_marginStart="@dimen/dp_275"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_wordno"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <ImageButton
                android:id="@+id/answer_card"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:background="@mipmap/icon_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    <com.yingzhiyun.yingquxue.units.SuperFileView2
        android:layout_below="@+id/tool_relative"
        android:id="@+id/mSuperFileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />


</RelativeLayout>
