<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">

    <TextView
        android:id="@+id/item_subject"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="语文"
        android:textColor="#ff1091e9"
        android:textSize="@dimen/sp_10"
        />

    <TextView
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/item_subject"
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一单元   积累与运用"
        android:textColor="#ff000000"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/item_schooltype"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toEndOf="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高zhong"
        android:textColor="#ffdb253b"
        android:textSize="10sp"
        />

    <TextView
        android:layout_marginTop="@dimen/dp_7"
        android:layout_below="@+id/item_subject"
        android:id="@+id/info"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="68dp"
        android:layout_height="14dp"
        android:text="共10道    对1道"
        android:textColor="#ff999999"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/item_time"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_below="@+id/info"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15：30"
        android:textColor="#ff999999"
        android:textSize="10sp"
        />

    <View

        android:background="#C8C7CC"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
</RelativeLayout>
