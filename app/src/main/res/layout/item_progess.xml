<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/sp_10"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/progress_tltle"
        android:layout_width="52dp"
        android:layout_height="14dp"
        android:text="年级平均分"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_10"
        />

    <ProgressBar
        android:layout_below="@+id/progress_tltle"
        android:progress="20"
        android:max="100"
        android:id="@+id/progressbar_pingjun"
        android:progressDrawable="@drawable/prdraewr"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="@dimen/dp_203"

        android:layout_height="@dimen/sp_14"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <TextView
        android:layout_marginStart="@dimen/dp_35"
        android:layout_toEndOf="@+id/progressbar_pingjun"
        android:id="@+id/average_score"
        android:layout_below="@+id/progress_tltle"
        android:layout_width="28dp"
        android:layout_height="20dp"

        android:textColor="#ff000000"
        android:textSize="14sp"
        />
</RelativeLayout>
