<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorF1F1F1"

    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/finish"
            android:src="@mipmap/mistake_close"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:id="@+id/tool_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_16"
            />


    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recy_answer"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_relative"
        android:layout_marginStart="@dimen/dp_17"

        android:layout_marginEnd="@dimen/dp_16">

    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/btn_jiaojuan"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_42"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@mipmap/login_button"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_25"
        android:text="@string/jiaojuan"
        android:textColor="#ffffffff"
        android:textSize="18sp" />
</RelativeLayout>
