<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:layout_marginTop="@dimen/dp_10"
   >

    <RelativeLayout
        android:background="@mipmap/icon_recyback"

        android:layout_width="@dimen/dp_370"
        android:layout_height="@dimen/dp_90"
        android:layout_centerHorizontal="true"
        >


        <TextView
            android:id="@+id/course_title"
            android:layout_marginStart="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_11"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高考语文一轮复习"
            android:textColor="#ff000000"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/fuze"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_21"
            android:layout_below="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负责小题：6"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />

        <ImageView

            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_37"
            android:src="@mipmap/righttou"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subject"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/bluetuo"
            android:gravity="center"
            android:layout_below="@+id/fuze"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_17"
            android:text="英语"
            android:textColor="#ff1091e9"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/grade"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_76"
            android:background="@drawable/bluetuo"
            android:gravity="center"
            android:layout_below="@+id/fuze"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_17"
            android:text="高二"
            android:textColor="#ff1091e9"
            android:textSize="10sp"
            />
    </RelativeLayout>
</RelativeLayout>