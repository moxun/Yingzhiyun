<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#F1F1F1"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/finish"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/leftdetail" />

        <TextView
            android:id="@+id/tool_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="在线联考报名"
            android:textColor="#ff000000"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp_16" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/tool_relative"
        android:layout_width="match_parent"
        android:background="@drawable/baoming"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_75"
            android:layout_above="@+id/kaoshi_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_230">

            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.core.widget.NestedScrollView>
        <TextView
            android:text="shengyushijian"
            android:id="@+id/kaoshi_time"
            android:layout_marginStart="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_above="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/sp_12"
            android:text="shengyushijian"
            android:id="@+id/baoming_size"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_above="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:background="@mipmap/login_button"
            android:gravity="center"
            android:text="一键免费报名"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>
