<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/finish"
            android:src="@mipmap/leftdetail"
            android:layout_marginStart="@dimen/dp_20"
           android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:id="@+id/tool_title"
           android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/jiaoyijilu"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易记录"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_16"
            />

    </RelativeLayout>
    <View
        android:id="@+id/fen"
        android:alpha="0.5"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#cccccc"
        android:layout_below="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/fen"
        android:background="@mipmap/blue_back"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_170">

        <TextView
            android:id="@+id/blance"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="余额"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/blance_number"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_below="@+id/blance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_35"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toEndOf="@+id/blance_number"
            android:layout_below="@+id/blance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="趣学币"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            />
        <TextView
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="趣学币可用于付费内容"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/chongzhi"
            android:layout_marginTop="@dimen/dp_67"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/chongzhi"
            android:layout_width="@dimen/dp_91"
            android:layout_height="@dimen/dp_39" />
    </RelativeLayout>
</RelativeLayout>