<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_153"
   android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_95"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:elevation="3dp"
        android:layout_margin="3dp">
        <ImageView
            android:id="@+id/iv_clinic_avatar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_95"

            android:src="@mipmap/tiku"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="@dimen/dp_6"
        android:id="@+id/recy_video_title"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_12"
        android:lines="1"
        android:maxEms="12"
        android:ellipsize="end"
        android:text="全国各地2018-2019试题..."
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_alignStart="@+id/card" />

    <TextView
        android:id="@+id/recy_video_duan"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_video_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="@dimen/dp_1"
        android:text="@string/classfiy"
        android:textColor="#ffcccccc"
        android:textSize="@dimen/sp_10" />

    <ImageView

        android:layout_toStartOf="@+id/read_value"
       android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_below="@+id/recy_video_title"
        android:src="@mipmap/eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/read_value"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_below="@+id/recy_video_title"
        android:layout_marginRight="@dimen/dp_3"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#ffcccccc"
        android:textSize="@dimen/sp_10"
        />

</RelativeLayout>
