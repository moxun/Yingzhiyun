<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/finish"
            android:src="@mipmap/leftdetail"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:id="@+id/tool_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易详情"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_16"
            />


    </RelativeLayout>
    <View
        android:id="@+id/fen"
        android:alpha="0.5"
        android:layout_marginTop="@dimen/dp_8"
        android:background="#cccccc"
        android:layout_below="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_50"
        android:id="@+id/pay_tiltle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_below="@+id/fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="趣学币充值"
        android:textColor="#ff000000"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/pay_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_below="@+id/pay_tiltle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10趣学币"
        android:textColor="#ffdb253b"
        android:textSize="20sp"
        />


    <TextView
        android:id="@+id/zhuangtai"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_below="@+id/pay_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/way"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/zhuangtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="付款方式"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/time"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/order"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/payzhuangtai"
        android:layout_marginStart="@dimen/dp_109"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_below="@+id/pay_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易成功"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/payway"
        android:layout_marginStart="@dimen/dp_109"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/zhuangtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/paytime"
        android:layout_marginStart="@dimen/dp_109"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-10-11"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/payorder"
        android:layout_marginStart="@dimen/dp_109"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="156165156165"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />
</RelativeLayout>