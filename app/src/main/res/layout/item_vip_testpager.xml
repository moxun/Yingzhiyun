<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@mipmap/record_back"
    android:layout_height="@dimen/dp_80">
    <TextView

        android:id="@+id/item_test_title"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014年普通"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_14"
        />
    <TextView

        android:id="@+id/item_test_scope"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014年普通"
        android:layout_below="@+id/item_test_title"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="去练习"
        android:textColor="#985B19"
        android:gravity="center"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:textSize="@dimen/sp_10"
        android:background="@drawable/chengsetuo"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content" />
</RelativeLayout>
