<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/icon_recyback"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_7"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_type"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_28"
                            android:src="@mipmap/icon_word" />

                        <TextView
                            android:id="@+id/item_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="语文必语文人教版语文必人教版语文必"
                            android:textColor="#ff000000"
                            android:lineSpacingExtra="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/biaoqian"
                            android:textColor="#ff999999"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:layout_gravity="center"
                            android:textSize="@dimen/sp_12"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/item_recy_label"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="@dimen/dp_20"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:orientation="horizontal">



                        <TextView
                            android:id="@+id/item_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/word"
                            android:text="45kb"
                            android:textColor="#ff999999"

                            android:drawablePadding="@dimen/dp_5"
                            android:textSize="@dimen/sp_12"/>

                        <TextView
                            android:id="@+id/read_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableStart="@mipmap/eyes"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="15"/>
                </LinearLayout>


        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/vip_back"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@drawable/vip_zhuanx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>
