<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="@dimen/dp_126"
        android:layout_height="@dimen/dp_74"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:elevation="3dp"
      >
        <ImageView
            android:id="@+id/iv_clinic_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_zhhiye_back"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_toEndOf="@+id/card"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/recy_video_title"
        android:textColor="#ff0a0a0a"
        android:textSize="@dimen/sp_12"
        android:layout_marginStart="@dimen/dp_26"
        android:text="[官方推荐-初级快速取证]初级 快速取证"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"

       />
    <TextView
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/recy_video_duan"
        android:textColor="#ff1091e9"
        android:textSize="@dimen/sp_14"
        android:text="免费"
        android:layout_toEndOf="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_video_title"
    />
    <TextView
        android:id="@+id/size"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_below="@+id/recy_video_title"
        android:layout_toEndOf="@+id/recy_video_duan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300人报名"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_12"
        />

    <View
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:id="@+id/fen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/size"

        android:background="#F1F1F1" />

</RelativeLayout>
