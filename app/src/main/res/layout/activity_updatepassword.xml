<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/finish"
            android:src="@mipmap/leftdetail"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:textIsSelectable="true"
            android:id="@+id/tool_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_16"
            />


    </RelativeLayout>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/old_pass"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="请输入当前密码"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="match_parent"
        android:textCursorDrawable="@drawable/edittext_guangbiao"

        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/new_pwd"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="请输入新密码"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="match_parent"
        android:textCursorDrawable="@drawable/edittext_guangbiao"

        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/agin_pwd"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="请确认新密码"
        android:layout_marginEnd="@dimen/dp_20"
        android:textCursorDrawable="@drawable/edittext_guangbiao"

        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@mipmap/login_button"
        android:gravity="center"
        android:text="修改"
        android:textColor="#ffffffff"
        android:textSize="18sp" />
</LinearLayout>