<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_138"
    android:layout_marginTop="@dimen/dp_12"
    android:id="@+id/back"
    android:background="@drawable/back_blue"
    android:layout_height="@dimen/dp_250">

    <ImageView
        android:src="@mipmap/shuxue"
        android:id="@+id/item_book_image"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_width="@dimen/dp_129"
        android:layout_height="@dimen/dp_158" />

    <TextView
        android:gravity="center"
        android:id="@+id/item_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_book_image"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="14dp"
        android:text="必修一"
        android:textColor="#ff333333"
        android:textSize="14sp" />
</RelativeLayout>
