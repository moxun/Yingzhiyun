<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_245"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/edittext_radio"
    android:orientation="vertical">


    <TextView

        android:id="@+id/content"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/sp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前非WI-FI网络,确定打开文件？"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_18"
        />

    <View

        android:layout_marginTop="@dimen/dp_23"
        android:id="@+id/fen"
        android:alpha="0.5"
        android:background="#cccccc"
        android:layout_below="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:layout_below="@+id/fen"
        android:layout_centerHorizontal="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_left_btn"
            android:text="取消"
            android:textColor="#ff1091e9"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="@dimen/dp_122"
            android:layout_height="@dimen/dp_38" />
        <View



            android:alpha="0.5"
            android:background="#cccccc"
            android:layout_below="@+id/content"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_38"/>
        <TextView
            android:id="@+id/dialog_right_btn"


            android:text="确定"
            android:textColor="#ff1091e9"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="@dimen/dp_122"
            android:layout_height="@dimen/dp_38"
            />
    </LinearLayout>
</RelativeLayout>
