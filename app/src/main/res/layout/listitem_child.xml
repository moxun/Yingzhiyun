<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_height="@dimen/dp_55"

    >

    <RelativeLayout
        android:id="@+id/aaaa"
        android:layout_width="@dimen/dp_15"
        android:layout_height="wrap_content">

        <ImageView

            android:src="@drawable/icon_zhxian"
            android:id="@+id/zhixian"
            android:layout_width="2dp"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_30" />

        <ImageView
            android:id="@+id/qiu"
            android:layout_marginLeft="@dimen/dp_3"

            android:layout_below="@+id/zhixian"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@drawable/icon_tuo"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
        android:text="@string/app_name"
        android:id="@+id/child_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="#ff000000"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toRightOf="@+id/aaaa"
        android:layout_alignBottom="@+id/aaaa"
        android:textSize="14sp" />
</RelativeLayout>