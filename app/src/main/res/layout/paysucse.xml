<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="
#F1F1F1"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/finish"
            android:src="@mipmap/leftdetail"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:id="@+id/tool_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_16"
            />


    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_below="@+id/tool_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_succeed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_24"
            android:src="@mipmap/icon_paysusses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wanch"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image_succeed"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:text="充值完成"
            android:textColor="#ff000000"
            android:textSize="16sp"
            />

        <LinearLayout
            android:id="@+id/benci"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_below="@+id/wanch"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/benci"
                android:textColor="#999999"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/pay_size"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="144dp"
                android:layout_height="20dp"
                android:text="6趣学币"
                android:textColor="#ff1091e9"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_below="@+id/benci"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dangci"
                android:textColor="#999999"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/blance"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="144dp"
                android:layout_height="20dp"
                android:text="6趣学币"
                android:textColor="#ff1091e9"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginBottom="@dimen/dp_20"
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@mipmap/login_button"
        android:gravity="center"
        android:text="充值完成"
        android:textColor="#ffffffff"
        android:textSize="18sp" />
</RelativeLayout>