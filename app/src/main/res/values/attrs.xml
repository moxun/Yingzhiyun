<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- xy坐标轴颜色 -->
    <attr name="xylinecolor" format="color" />
    <!-- xy坐标轴宽度 -->
    <attr name="xylinewidth" format="dimension" />
    <!-- xy坐标轴文字颜色 -->
    <attr name="xytextcolor" format="color" />
    <!-- xy坐标轴文字大小 -->
    <attr name="xytextsize" format="dimension" />
    <!-- 折线图中折线的颜色 -->
    <attr name="linecolor" format="color" />
    <!-- x轴各个坐标点水平间距 -->
    <attr name="interval" format="dimension" />
    <!-- 背景颜色 -->
    <attr name="bgcolor" format="color" />
    <!--是否在ACTION_UP时，根据速度进行自滑动，建议关闭，过于占用GPU-->
    <attr name="isScroll" format="boolean" />
    <declare-styleable name="chartView">
        <attr name="xylinecolor" />
        <attr name="xylinewidth" />
        <attr name="xytextcolor" />
        <attr name="xytextsize" />
        <attr name="linecolor" />
        <attr name="interval" />
        <attr name="bgcolor" />
        <attr name="isScroll" />
    </declare-styleable>
    <declare-styleable name="CircleProgressBar">
        <attr name="outside_color" format="color" />
        <attr name="outside_radius" format="dimension" />
        <attr name="inside_color" format="color" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_width" format="dimension" />
        <attr name="max_progress" format="integer" />
        <attr name="progress" format="float" />
        <attr name="title" format="string"></attr>
        <attr name="title_size" format="dimension"></attr>
        <attr name="title_color" format="color"></attr>
        <attr name="direction">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="honour_ability_view">
        <attr name="honour_ability_count" format="integer"/>
        <attr name="honour_ability_line_color" format="color"/>
        <attr name="honour_ability_line_width" format="dimension"/>
        <attr name="honour_ability_dot_color" format="color"/>
        <attr name="honour_ability_dot_radius" format="dimension"/>
        <attr name="honour_ability_dot_width" format="dimension"/>
        <attr name="honour_ability_cover_color" format="color"/>
        <attr name="honour_ability_cover_width" format="dimension"/>
        <attr name="honour_ability_text_color" format="color"/>
        <attr name="honour_ability_text_size" format="dimension"/>
        <attr name="honour_ability_center_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="starView">
        <attr name="defoultImage" format="color|reference" />
        <attr name="hightImage" format="reference|color" />
        <attr name="counterAll" format="integer" />
        <attr name="childWidth" format="dimension|reference" />
        <attr name="half_star" format="reference|color" />
        <attr name="support_half" format="boolean" />
        <attr name="seletedable" format="boolean" />
        <attr name="precision">
            <enum name="decimal" value="0" />
            <enum name="half" value="1" />
            <enum name="whole" value="2" />
        </attr>
    </declare-styleable>
</resources>